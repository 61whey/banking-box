		{
			"name": "02 Create Consent",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"function base64url(source) {\r",
							"\t// Encode in classical base64\r",
							"\tencodedSource = CryptoJS.enc.Base64.stringify(source);\r",
							"\r",
							"\t// Remove padding equal characters\r",
							"\tencodedSource = encodedSource.replace(/=+$/, '');\r",
							"\r",
							"\t// Replace characters according to base64url specifications\r",
							"\tencodedSource = encodedSource.replace(/\\+/g, '-');\r",
							"\tencodedSource = encodedSource.replace(/\\//g, '_');\r",
							"\r",
							"\treturn encodedSource;\r",
							"}\r",
							"\r",
							"tests[\"Response has consentId\"] = responseBody.has(\"consentId\");\r",
							"\r",
							"var uuid = require('uuid');\r",
							"var jsonData = JSON.parse(responseBody);\r",
							"postman.setEnvironmentVariable(\"consentId\", jsonData.Data.consentId);\r",
							"var outputURI = postman.getEnvironmentVariable(\"AS_AUTH_URL\"); \r",
							"var audiURI = postman.getEnvironmentVariable(\"AS_URL\"); \r",
							"var cl_id = postman.getEnvironmentVariable(\"client_id\"); \r",
							"var re_uri = postman.getEnvironmentVariable(\"redirect_uri\"); \r",
							"\r",
							"let dataX = {\r",
							" \"response_type\": \"code id_token\",\r",
							" \"state\": uuid.v4(),\r",
							" \"scope\": \"openid accounts offline_access\",\r",
							" \"nonce\": uuid.v4(),\r",
							" \"exp\": (Math.floor(Date.now() / 1000)) + 86400,\r",
							" \"max_age\": 86400,\r",
							" \"claims\":\r",
							" {\r",
							" \"userinfo\":\r",
							" {\r",
							" \"openbanking_intent_id\":\r",
							" {\r",
							" \"value\": \"`${jsonData.Data.consentId}`\",\r",
							" \"essential\": true\r",
							" }\r",
							" },\r",
							" \"id_token\":\r",
							" {\r",
							" \"openbanking_intent_id\":\r",
							" {\r",
							" \"value\": \"5726f7df-df8a-4985-90f0-23805fa793e0\",\r",
							" \"essential\": true\r",
							" },\r",
							" \"acr\":\r",
							" {\r",
							" \"values\": [\"urn:rubanking:sca\", \"urn:rubanking:ca\"],\r",
							" \"essential\": true\r",
							" }\r",
							" }\r",
							" }\r",
							"}\r",
							"dataX.aud = audiURI;\r",
							"dataX.iss = cl_id;\r",
							"dataX.client_id = cl_id;\r",
							"dataX.redirect_uri = re_uri;\r",
							"pm.environment.get(\"variable_key\");\r",
							"dataX.claims.userinfo.openbanking_intent_id.value = jsonData.Data.consentId;\r",
							"dataX.claims.id_token.openbanking_intent_id.value = jsonData.Data.consentId;\r",
							"\r",
							"var stringifiedData = CryptoJS.enc.Utf8.parse(JSON.stringify(dataX));\r",
							"var encodedData = base64url(stringifiedData);\r",
							"\r",
							"\r",
							"console.log(outputURI+\"/connect/authorize?client_id=\"+cl_id+\"&response_type=code%20id_token&state=\"+dataX.state+\"&redirect_uri=\"+re_uri+\"&nonce=\"+dataX.nonce+\"&scope=\"+dataX.scope+\"&request=ew0KICJ0eXAiOiAiSldUIiwNCiAiYWxnIjogIm5vbmUiDQp9.\"+encodedData+\".\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{accesstoken_client}}",
							"type": "string"
						}
					]
				},
